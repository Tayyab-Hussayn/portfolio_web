{
  "component": "global-button",
  "componentType": "ui-element",
  "location": "/components/ui/Button",
  "usage": "Global reusable button component for entire website. Import and use wherever button is needed.",
  "layout": {
    "type": "pill-button",
    "display": "inline-flex",
    "alignment": "center",
    "direction": "row"
  },
  "content": {
    "text": "Dynamic text prop",
    "icon": {
      "type": "arrow-right",
      "position": "right",
      "size": "18px"
    }
  },
  "states": {
    "default": {
      "colors": {
        "background": "#453478",
        "text": "#ffffff",
        "iconCircleBg": "#ffffff",
        "iconColor": "#453478"
      },
      "iconPosition": "right"
    },
    "hover": {
      "colors": {
        "background": "#000000",
        "text": "#ffffff",
        "iconCircleBg": "#ffffff",
        "iconColor": "#000000"
      },
      "iconPosition": "left",
      "animation": {
        "iconMovement": "slide-right-to-left",
        "duration": "400ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "active": {
      "transform": "scale(0.98)"
    },
    "disabled": {
      "opacity": "0.5",
      "cursor": "not-allowed"
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "Poppins, Inter, sans-serif",
      "fontSize": "15px",
      "fontWeight": "600",
      "letterSpacing": "0.3px"
    },
    "spacing": {
      "padding": "14px 24px 14px 28px",
      "gap": "12px",
      "iconCircleSize": "36px",
      "iconCirclePadding": "8px"
    },
    "effects": {
      "borderRadius": "50px",
      "iconCircleRadius": "50%",
      "transition": {
        "background": "0.3s ease",
        "color": "0.3s ease",
        "transform": "0.3s ease"
      },
      "iconTransition": {
        "transform": "0.4s cubic-bezier(0.4, 0, 0.2, 1)",
        "left": "0.4s cubic-bezier(0.4, 0, 0.2, 1)",
        "right": "0.4s cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "hoverTransform": "translateY(-2px)",
      "shadow": "0 4px 12px rgba(69, 52, 120, 0.25)",
      "hoverShadow": "0 6px 20px rgba(0, 0, 0, 0.3)"
    }
  },
  "animation": {
    "iconMovement": {
      "type": "position-swap",
      "description": "On hover, icon circle smoothly transitions from right side to left side of button",
      "keyframes": {
        "default": {
          "iconPosition": "flex-end",
          "order": "2"
        },
        "hover": {
          "iconPosition": "flex-start",
          "order": "1"
        }
      },
      "implementation": "Use CSS flexbox order property and absolute positioning for smooth left-right transition"
    }
  },
  "variants": {
    "primary": {
      "background": "#453478",
      "hoverBackground": "#000000"
    },
    "secondary": {
      "background": "#000000",
      "hoverBackground": "#453478"
    },
    "outline": {
      "background": "transparent",
      "border": "2px solid #453478",
      "text": "#453478",
      "hoverBackground": "#453478",
      "hoverText": "#ffffff"
    }
  },
  "props": {
    "text": {
      "type": "string",
      "required": true,
      "example": "Meet our team"
    },
    "variant": {
      "type": "string",
      "default": "primary",
      "options": ["primary", "secondary", "outline"]
    },
    "href": {
      "type": "string",
      "required": false,
      "description": "Link URL if button acts as a link"
    },
    "onClick": {
      "type": "function",
      "required": false,
      "description": "Click handler function"
    },
    "disabled": {
      "type": "boolean",
      "default": false
    },
    "icon": {
      "type": "string",
      "default": "arrow-right",
      "options": ["arrow-right", "arrow-up-right", "chevron-right"]
    }
  },
  "globalUsageNote": "This is the GLOBAL button component used throughout the entire website. All buttons should use this component for consistency. The hover effect includes smooth color transition from primary (#453478) to black (#000000) with animated arrow movement from right to left side.",
  "implementationExample": {
    "react": "<Button text='Meet our team' variant='primary' href='/team' />",
    "html": "<button class='global-button primary'>Meet our team<span class='icon-circle'><svg>arrow</svg></span></button>"
  }
}
